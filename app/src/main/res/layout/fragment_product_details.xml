<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProductDetailsFragment">

    <ImageView
        android:id="@+id/product_details_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/product_tile_details_tv"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/product_tile_details_tv"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="product name"
        android:textSize="22sp"
        android:textColor="#000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/product_details_details_tv"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="@id/product_tile_details_tv"
            app:layout_constraintEnd_toEndOf="@id/product_tile_details_tv"
            app:layout_constraintTop_toBottomOf="@id/product_tile_details_tv"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#000"
            android:textSize="18sp"
            android:text="product details"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="@id/product_details_details_tv"
            app:layout_constraintEnd_toEndOf="@id/product_details_details_tv"
            app:layout_constraintTop_toBottomOf="@id/product_details_details_tv"
            android:layout_marginTop="16dp"
            android:background="#000"
            android:layout_height="2dp"/>

        <TextView
            android:id="@+id/product_details_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="300"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@id/view"/>

        <ImageView
            android:id="@+id/dec_item_ib"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/quantity_details_tv"
            app:layout_constraintTop_toTopOf="@id/quantity_details_tv"
            app:layout_constraintEnd_toStartOf="@id/quantity_details_tv"
            android:layout_marginEnd="8dp"
            android:minWidth="30dp"
            android:minHeight="30dp"
            android:background="@drawable/ic_remove"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/quantity_details_tv"
            app:layout_constraintTop_toTopOf="@id/product_details_price_tv"
            app:layout_constraintBottom_toBottomOf="@id/product_details_price_tv"
            app:layout_constraintEnd_toStartOf="@id/inc_item_ib"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:maxLines="1"
            android:ems="2"
            android:maxEms="2"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"
            android:background="@android:drawable/editbox_background_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/inc_item_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:minHeight="30dp"
            android:minWidth="30dp"
            android:background="@drawable/ic_add"
            app:layout_constraintBottom_toBottomOf="@id/quantity_details_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/quantity_details_tv"/>

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="@id/product_details_price_tv"
            app:layout_constraintStart_toStartOf="@id/product_details_price_tv"
            app:layout_constraintTop_toBottomOf="@id/product_details_price_tv"
            android:layout_marginTop="16dp"
            android:background="#000"
            android:layout_height="2dp"/>

        <TextView
            android:id="@+id/product_description_tv"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="@id/product_tile_details_tv"
            app:layout_constraintEnd_toEndOf="@id/product_tile_details_tv"
            app:layout_constraintTop_toBottomOf="@id/view2"
            android:textSize="18sp"
            android:textColor="#000"
            android:textAlignment="viewStart"
            android:scrollbars="vertical"
            android:ellipsize="end"
            app:layout_constraintBottom_toTopOf="@id/add_to_cart_btn"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_height="0dp"
            />

        <Button
            android:id="@+id/add_to_cart_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/product_details_details_tv"
            app:layout_constraintStart_toStartOf="@id/product_details_details_tv"
            android:layout_marginBottom="58dp"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp"
            android:text="Add To Cart"
            android:background="@android:color/darker_gray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>